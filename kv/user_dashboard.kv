<UserDashboardScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        # Logout Button at the Top Right Corner
        FloatLayout:
            size_hint_y: None
            height: 50

            Button:
                text: "Logout"
                size_hint: None, None
                size: 100, 40
                pos_hint: {'right': 1, 'top': 1}
                on_press:
                    root.manager.get_screen('login').ids.username.text = ''
                    root.manager.get_screen('login').ids.password.text = ''
                    root.manager.current = 'login'

        # Title and Caption
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.2

            Label:
                text: "StreamSmart"
                font_size: 48
                bold: True
                halign: 'center'
                valign: 'middle'
                size_hint_y: 0.6

            Label:
                text: "Your Destination for Affordable Subscriptions"
                font_size: 20
                halign: 'center'
                valign: 'middle'
                size_hint_y: 0.4

        # Navigation Bar
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            spacing: 20
            padding: 10

            Button:
                text: "Home"
                on_press: print("Home clicked")  # Add logic if needed

            Button:
                text: "About"
                on_press: root.manager.current = 'about'  # Navigate to About screen

            Button:
                text: "FAQs"
                on_press: root.manager.current = 'faqs'  # Navigate to FAQ screen

            Button:
                text: "Contact Us"
                on_press: root.manager.current = 'contact'
            Button:
                text: "Chatbot"
                on_press: root.manager.current = 'chatbot'  # Navigate to Contact screen

        # OTT Options with Image Buttons in a Grid
        ScrollView:
            size_hint_y: None
            height: self.parent.height * 0.6
            BoxLayout:
                orientation: 'vertical'
                padding: 10
                spacing: 10
                size_hint_y: None
                height: self.height

                GridLayout:
                    cols: 2
                    padding: 10
                    spacing: 20

                    # Netflix Logo
                    BoxLayout:
                        orientation: 'vertical'
                        padding: 5
                        spacing: 5
                        size_hint_y: None
                        size_hint_x: 0.5
                        height: self.parent.height * 3  # Tripled height
                        canvas.before:
                            Color:
                                rgba: 0.87, 0.19, 0.39, 1
                            Line:
                                width: 2
                                rectangle: self.x, self.y, self.width, self.height

                        ImageButton:
                            source: 'assets/netflix.jpg'
                            on_press: root.open_subscription('Netflix')
                            size_hint: 1, 1

                    # Amazon Prime Logo
                    BoxLayout:
                        orientation: 'vertical'
                        padding: 5
                        spacing: 5
                        size_hint_y: None
                        size_hint_x: 0.5
                        height: self.parent.height * 3  # Tripled height
                        canvas.before:
